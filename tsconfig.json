{
    "compilerOptions": {
        "jsx": "react",
        "rootDir": "src",
        "module": "commonjs",
        "target": "es5",
        "lib": [ "es7", "dom" ],
        "sourceMap": true,
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitAny": true,
        "strictNullChecks": false,
        "removeComments": true
    },
    "include": [
        "./src"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}